%html
  %link{ rel: 'stylesheet', type: 'text/css', href: '/public/stylesheets/site.css' }
  %body
    %script#account-template{ type: 'text/template' }
      = File.read('./public/javascript/templates/account.html')
    %script#transaction-template{ type: 'text/template' }
      = File.read('./public/javascript/templates/transaction.html')
    %script{ type: 'text/javascript', src: '/public/javascript/lib/jquery.js' }
    %script{ type: 'text/javascript', src: '/public/javascript/lib/underscore.js' }
    %script{ type: 'text/javascript', src: '/public/javascript/lib/backbone.js' }
    - %w(models collections views routes).each do |dir|
      - Dir["public/javascript/#{dir}/*.js"].each do |f|
        %script{ type: 'text/javascript', src: "/#{f}" }
    %script{ type: 'text/javascript', src: '/public/javascript/app.js' }

  .welcome
    %h1 Budget App

  %section#accounts.pane
    %h3 Accounts
    %ul#accounts-list

  %section#budget-items.pane
    %h3 Monthly Items
    %ul#monthly-amounts-list

    %h3 Weekly Items
    %ul#weekly-amounts-list
