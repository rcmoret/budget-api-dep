%html
  %link{ rel: 'stylesheet', type: 'text/css', href: '/public/stylesheets/site.css' }
  %link{ rel: 'stylesheet', type: 'text/css', href: '/public/stylesheets/font-awesome.min.css' }
  %link{ rel: 'stylesheet', type: 'text/css', href: '/public/stylesheets/jquery-ui.theme.css' }
  %link{ rel: 'stylesheet', type: 'text/css', href: '/public/stylesheets/jquery-ui.css' }
  %body
    - Dir['public/templates/*.html'].each do |f|
      = File.read(f)
    %script{ type: 'text/javascript', src: '/public/vendor/javascript/q.js' }
    %script{ type: 'text/javascript', src: '/public/vendor/javascript/jquery.js' }
    %script{ type: 'text/javascript', src: '/public/vendor/javascript/underscore.js' }
    %script{ type: 'text/javascript', src: '/public/vendor/javascript/backbone.js' }
    %script{ type: 'text/javascript', src: '/public/vendor/javascript/jquery-ui.min.js' }
    - %w(models collections views routers).each do |dir|
      - Dir["public/javascript/#{dir}/*.js"].each do |f|
        %script{ type: 'text/javascript', src: "/#{f}" }
    %script{ type: 'text/javascript', src: '/public/javascript/app.js' }

  .welcome
    %h1 Budget App

  %section
    %a{ href: '#accounts' }
      .title.accounts
        %h2 Accounts
    %a{ href: '#budget-items' }
      .title.budget-items
        %h2 Budget
    .clear-fix
    .pane.accounts
      .buffer
      #account-wrapper{ style: "display: none;" }
        #tab-list
        .clear-fix
        #account-content
    .pane.budget
      .buffer
      #budget-content{ style: "display: none;" }
